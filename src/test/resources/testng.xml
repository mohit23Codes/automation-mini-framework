<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<!-- Root element for TestNG suite -->
<suite name="ParallelSuite" parallel="classes" thread-count="4">
    <!-- parallel="classes" means each class can run on its own thread -->
    <!-- thread-count="5" sets max number of parallel threads -->

    <!-- Register listeners -->
    <listeners>
        <!-- Attach RetryListener to apply RetryAnalyzer to all tests -->
        <listener class-name="listeners.RetryListener"/>
        <!-- Attach TestListener for logging + screenshots on failure + Allure attachments -->
        <listener class-name="listeners.TestListener"/>
        <!-- Allure listener to integrate Allure with TestNG -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- Define a TestNG <test> block (logical test group) -->
    <test name="GoogleSearchSuite">
        <!-- List of test classes to execute -->
        <classes>
            <class name="tests.GoogleSearchSeleniumTest"/>
            <class name="tests.GoogleSearchTestNGTest"/>
            <class name="tests.GoogleSearchJavaTest"/>
            <class name="tests.GoogleSearchSDETTest"/>
            <!--  class name="tests.GoogleSearchRandomTest"/>-->
        </classes>
    </test>
</suite>
