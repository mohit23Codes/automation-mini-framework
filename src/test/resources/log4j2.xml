<?xml version="1.0" encoding="UTF-8"?>
<!-- Root configuration element for Log4j2 -->
<Configuration status="WARN">
    <!-- Define where logs should go (console, file, etc.) -->
    <Appenders>
        <!-- Console appender writes logs to the terminal -->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- Layout defines how each log line looks -->
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File appender writes logs to a file on disk -->
        <File name="File" fileName="logs/framework.log" append="true">
            <!-- Layout for file logs with full date -->
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <!-- Loggers decide what to log and at what level -->
    <Loggers>
        <!-- Root logger applies to all classes unless overridden -->
        <Root level="info">
            <!-- Attach both console and file appenders -->
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
